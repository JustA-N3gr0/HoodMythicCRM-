import json
import os

FILE = "user.json"

def load_user():
    if not os.path.exists(FILE):
        return {
            "active_agent": None,
            "called_leads": {},
            "points": 0
        }
    with open(FILE, "r") as f:
        return json.load(f)

def save_user(data):
    with open(FILE, "w") as f:
        json.dump(data, f, indent=4)